<Page
    x:Class="App1.settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">
    <Grid>
        <StackPanel>
            <TextBlock x:ConnectionId='2' x:FieldModifier="public" x:Name="header" FontFamily="Segoe UI Variable Display" Style="{ThemeResource TitleLargeTextBlockStyle}" TextWrapping="WrapWholeWords" Margin="10,10,10,0">Settings<LineBreak/></TextBlock>
            <muxc:Expander CornerRadius="8" Margin="8" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                <muxc:Expander.Header>
                    <StackPanel Spacing="10" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,10,10,10">
                        <TextBlock x:FieldModifier="public" FontSize="16">App theme</TextBlock>
                        <TextBlock x:FieldModifier="public" Foreground="{ThemeResource SystemBaseMediumColor}" FontSize="12">Select theme to display</TextBlock>
                    </StackPanel>
                </muxc:Expander.Header>
                <muxc:Expander.Content>
                    <StackPanel>
                        <RadioButton x:ConnectionId='6' Tag="Light"                        Content="Light"/>
                        <RadioButton x:ConnectionId='7' Tag="Dark"                       Content="Dark"/>
                        <RadioButton x:ConnectionId='8' Tag="SysDef"                          Content="System Default"/>
                    </StackPanel>
                </muxc:Expander.Content>
            </muxc:Expander>
            <Border CornerRadius="8" Margin="8" Background="{ThemeResource ExpanderHeaderBackground}" BorderThickness="{ThemeResource ExpanderHeaderBorderThickness}" BorderBrush="{ThemeResource ExpanderHeaderBorderBrush}" HorizontalAlignment="Stretch">
                <Grid Margin="4,0,8,0">
                <StackPanel Spacing="10" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="10,10,10,10">
                        <TextBlock x:ConnectionId='4' x:FieldModifier="public" x:Name="credits" FontFamily="Segoe UI" FontSize="16">Calculator written in C# by donut2008</TextBlock>
                        <TextBlock x:ConnectionId='5' x:FieldModifier="public" x:Name="version" FontFamily="Segoe UI" FontSize="12">Version 4 beta build 3, compiled on 23-Nov-21 09:23 PM IST</TextBlock>
                        <TextBlock FontFamily="Segoe UI" FontSize="16" FontWeight="Bold">Icon credit goes to Microsoft, I am NOT the creator of the app icon.</TextBlock>
                    </StackPanel>
                <HyperlinkButton x:ConnectionId='3' x:FieldModifier="public" x:Name="github" VerticalAlignment="Center" HorizontalAlignment="Right" NavigateUri="https://github.com/donut2008/Calculator">
                        <HyperlinkButton.Content>
                            <TextBlock Text="View this project on GitHub"/>
                        </HyperlinkButton.Content>
                    </HyperlinkButton>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</Page>

