<Page
    x:Class="App1.settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">
    <Page.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="ImageTemplate"                                 >
                <TextBlock/>
            </DataTemplate>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <StackPanel>
            <TextBlock x:ConnectionId='4' x:FieldModifier="public" x:Name="header" FontFamily="Segoe UI Variable Display" FontWeight="Bold" TextWrapping="WrapWholeWords" FontSize="32" Margin="10,10,10,0">Settings<LineBreak/></TextBlock>
            <muxc:Expander CornerRadius="8" Margin="8" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                <muxc:Expander.Header>
                    <StackPanel Spacing="10" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,10,10,10">
                        <TextBlock x:FieldModifier="public" FontFamily="Segoe UI Variable Display" FontSize="16">App theme</TextBlock>
                        <TextBlock x:FieldModifier="public" FontFamily="Segoe UI Variable Display" Foreground="{ThemeResource SystemBaseMediumColor}" FontSize="12">Select theme to display</TextBlock>
                    </StackPanel>
                </muxc:Expander.Header>
                <muxc:Expander.Content>
                    <StackPanel>
                        <RadioButton x:ConnectionId='17' FontFamily="Segoe UI Variable Display" Tag="Light"                        Content="Light"/>
                        <RadioButton x:ConnectionId='18' FontFamily="Segoe UI Variable Display" Tag="Dark"                       Content="Dark"/>
                        <RadioButton x:ConnectionId='19' FontFamily="Segoe UI Variable Display" Tag="SysDef"                          Content="System default" IsChecked="True"/>
                    </StackPanel>
                </muxc:Expander.Content>
            </muxc:Expander>
            <muxc:Expander CornerRadius="8" Margin="8" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                <muxc:Expander.Header>
                    <StackPanel Spacing="10" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,10,10,10">
                        <TextBlock FontFamily="Segoe UI Variable Display" FontSize="16">Custom themes</TextBlock>
                        <TextBlock FontFamily="Segoe UI Variable Display" FontSize="12" Foreground="{ThemeResource SystemBaseMediumColor}">Use a custom theme for the app</TextBlock>
                    </StackPanel>
                </muxc:Expander.Header>
                <muxc:Expander.Content>
                    <StackPanel>
                        <RadioButton x:ConnectionId='8' FontFamily="Segoe UI Variable Display" Tag="Yellow"                         Content="Yellow"/>
                        <RadioButton x:ConnectionId='9' FontFamily="Segoe UI Variable Display" Tag="Red"                      Content="Red"/>
                        <RadioButton x:ConnectionId='10' FontFamily="Segoe UI Variable Display" Tag="Green"                        Content="Green"/>
                        <RadioButton x:ConnectionId='11' FontFamily="Segoe UI Variable Display" Tag="Blue"                       Content="Blue"/>
                        <RadioButton x:ConnectionId='12' FontFamily="Segoe UI Variable Display" Tag="DcL"                      Content="Discord light"/>
                        <RadioButton x:ConnectionId='13' FontFamily="Segoe UI Variable Display" Tag="DcD"                      Content="Discord dark"/>
                        <RadioButton x:ConnectionId='14' FontFamily="Segoe UI Variable Display" Tag="WAL"                      Content="WhatsApp light"/>
                        <RadioButton x:ConnectionId='15' FontFamily="Segoe UI Variable Display" Tag="WAD"                      Content="WhatsApp dark"/>
                        <RadioButton x:ConnectionId='16' FontFamily="Segoe UI Variable Display" Tag="AMOLED"                         Content="AMOLED black"/>
                    </StackPanel>
                </muxc:Expander.Content>
            </muxc:Expander>
            <Border CornerRadius="8" Margin="8" Background="{ThemeResource ExpanderHeaderBackground}" BorderThickness="{ThemeResource ExpanderHeaderBorderThickness}" BorderBrush="{ThemeResource ExpanderHeaderBorderBrush}" HorizontalAlignment="Stretch">
                <Grid>
                    <StackPanel Spacing="10" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="16,10,10,10">
                        <TextBlock x:ConnectionId='6' x:FieldModifier="public" x:Name="credits" FontFamily="Segoe UI Variable Display" FontSize="16">Calculator written in C# by donut2008</TextBlock>
                        <TextBlock x:ConnectionId='7' x:FieldModifier="public" x:Name="version" FontFamily="Segoe UI Variable Display" FontSize="12">Version 5 canary build 54, compiled on 15-Nov-21 12:43 PM IST</TextBlock>
                        <TextBlock FontFamily="Segoe UI Variable Display" FontSize="16" FontWeight="Bold">Icon credit goes to Microsoft, I am NOT the creator of the app icon.</TextBlock>
                    </StackPanel>
                    <HyperlinkButton x:ConnectionId='5' x:FieldModifier="public" x:Name="github" FontFamily="Segoe UI Variable Display" Margin="10,10,10,10" VerticalAlignment="Center" HorizontalAlignment="Right" NavigateUri="https://github.com/donut2008/Calculator" Content="View this project on GitHub"/>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</Page>

