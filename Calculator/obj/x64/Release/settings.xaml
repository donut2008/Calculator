<Page
    x:Class="App1.settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">

    <Grid>
        <StackPanel>
            <TextBlock x:ConnectionId='2' x:Name="settingstext" FontFamily="Segoe UI" Margin="8,8,8,8" TextWrapping="WrapWholeWords">
                <Run FontWeight="Bold" FontSize="32">About</Run><LineBreak/><LineBreak/></TextBlock>
            <TextBlock Margin="8,8,8,8">
                <Run FontSize="16">Calculator written in C# by donut2008</Run><LineBreak/>
            </TextBlock>
            <HyperlinkButton x:ConnectionId='3' x:Name="github" Content="View donut2008 on GitHub" NavigateUri="https://github.com/donut2008"/>
            <TextBlock Margin="8,8,8,8">
                <Run FontStyle="Italic">More features coming soon!</Run>
            </TextBlock>
            <TextBlock Margin="8,8,8,8">
                <Run>Version 0.7.5 stable build 171021-1652</Run>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>

