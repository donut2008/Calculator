<Page
    x:Class="App1.settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    RequestedTheme="Default">
    <Grid>
        <StackPanel>
            <TextBlock x:ConnectionId='2' x:FieldModifier="public" x:Name="header" FontFamily="Segoe UI" TextWrapping="WrapWholeWords" FontWeight="SemiBold" FontSize="32" Margin="10,10,10,0"><Run>About</Run><LineBreak/></TextBlock>
            <Border CornerRadius="8" Margin="8" Background="{ThemeResource ExpanderHeaderBackground}" BorderThickness="{ThemeResource ExpanderHeaderBorderThickness}" BorderBrush="{ThemeResource ExpanderHeaderBorderBrush}" HorizontalAlignment="Stretch">
                <StackPanel Spacing="10" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="10,10,10,10">
                    <TextBlock x:ConnectionId='3' x:FieldModifier="public" x:Name="credits" FontSize="16"><Run>Calculator written in C# by donut2008</Run></TextBlock>
                    <TextBlock x:ConnectionId='4' x:FieldModifier="public" x:Name="version" FontSize="12">Version 1 Beta build 211102-1415</TextBlock>
                    <HyperlinkButton x:ConnectionId='5' x:FieldModifier="public" x:Name="github" VerticalAlignment="Center" HorizontalAlignment="Right" NavigateUri="https://github.com/donut2008/Calculator">
                        <HyperlinkButton.Content>
                            <TextBlock Text="View this project on GitHub"/>
                        </HyperlinkButton.Content>
                    </HyperlinkButton>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>

