<Page
    x:Class="App1.buttons"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="54*"/>
            <ColumnDefinition Width="54*"/>
            <ColumnDefinition Width="54*"/>
            <ColumnDefinition Width="54*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="54*"/>
        </Grid.RowDefinitions>
        <TextBlock x:ConnectionId='2' x:Name="result" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Margin="4" Text="0" FontFamily="Segoe UI Bold" FontSize="40" HorizontalAlignment="Stretch" TextAlignment="Right" TextReadingOrder="UseFlowDirection"/>
        <Button x:ConnectionId='3' x:Name="btn0" Grid.Row="6" Grid.Column="0" Margin="4" CornerRadius="8" Content="0" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                   />
        <Button x:ConnectionId='4' x:Name="btn1" Grid.Row="5" Grid.Column="0" Margin="4" CornerRadius="8" Content="1" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                   />
        <Button x:ConnectionId='5' x:Name="btn2" Grid.Row="5" Grid.Column="1" Margin="4" CornerRadius="8" Content="2" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                   />
        <Button x:ConnectionId='6' x:Name="btn3" Grid.Row="5" Grid.Column="2" Margin="4" CornerRadius="8" Content="3" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                   />
        <Button x:ConnectionId='7' x:Name="btn4" Grid.Row="4" Grid.Column="0" Margin="4" CornerRadius="8" Content="4" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                   />
        <Button x:ConnectionId='8' x:Name="btn5" Grid.Row="4" Grid.Column="1" Margin="4" CornerRadius="8" Content="5" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                   />
        <Button x:ConnectionId='9' x:Name="btn6" Grid.Row="4" Grid.Column="2" Margin="4" CornerRadius="8" Content="6" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                   />
        <Button x:ConnectionId='10' x:Name="btn7" Grid.Row="3" Grid.Column="0" Margin="4" CornerRadius="8" Content="7" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                   />
        <Button x:ConnectionId='11' x:Name="btn8" Grid.Row="3" Grid.Column="1" Margin="4" CornerRadius="8" Content="8" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                   />
        <Button x:ConnectionId='12' x:Name="btn9" Grid.Row="3" Grid.Column="2" Margin="4" CornerRadius="8" Content="9" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                   />
        <Button x:ConnectionId='13' x:Name="btnDiv" Grid.Row="2" Grid.Column="3" Margin="4" CornerRadius="8" Content="÷" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                     />
        <Button x:ConnectionId='14' x:Name="btnMul" Grid.Row="3" Grid.Column="3" Margin="4" CornerRadius="8" Content="×" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                     />
        <Button x:ConnectionId='15' x:Name="btnSub" Grid.Row="4" Grid.Column="3" Margin="4" CornerRadius="8" Content="-" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                     />
        <Button x:ConnectionId='16' x:Name="btnAdd" Grid.Row="5" Grid.Column="3" Margin="4" CornerRadius="8" Content="+" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                     />
        <Button x:ConnectionId='17' x:Name="btnEq" Grid.Row="6" Grid.Column="3" Margin="4" CornerRadius="8" Content="=" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="{ThemeResource SystemAccentColor}"                    />
        <Button x:ConnectionId='18' x:Name="btnBackspace" Grid.Row="1" Grid.Column="3" Margin="4" CornerRadius="8" Content="⌫" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                           />
        <Button x:ConnectionId='19' x:Name="btnDec" Grid.Row="6" Grid.Column="2" Margin="4" CornerRadius="8" Content="." FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                     />
        <Button x:ConnectionId='20' x:Name="btnSq" Grid.Row="1" Grid.Column="0" Margin="4" CornerRadius="8" Content="x²" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                    />
        <Button x:ConnectionId='21' x:Name="btnCb" Grid.Row="1" Grid.Column="1" Margin="4" CornerRadius="8" Content="x³" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                    />
        <Button x:ConnectionId='22' x:Name="btnCbrt" Grid.Row="2" Grid.Column="1" Margin="4" CornerRadius="8" Content="∛" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                      />
        <Button x:ConnectionId='23' x:Name="btnSqrt" Grid.Row="2" Grid.Column="0" Margin="4" CornerRadius="8" Content="√" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                      />
        <Button x:ConnectionId='24' x:Name="btnClearEntry" Grid.Row="1" Grid.Column="2" Margin="4" CornerRadius="8" Content="CE" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                            />
        <Button x:ConnectionId='25' x:Name="btnClear" Grid.Row="2" Grid.Column="2" Margin="4" CornerRadius="8" Content="C" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                       />
        <Button x:ConnectionId='26' x:Name="btnPlusMinus" Grid.Row="6" Grid.Column="1" Margin="4" CornerRadius="8" Content="±" FontFamily="Segoe UI" FontSize="36" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                           />
    </Grid>
</Page>

