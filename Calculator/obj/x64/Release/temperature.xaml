<Page
    x:Class="App1.temperature"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">
    <Grid>
        <Grid.BackgroundTransition>
            <BrushTransition />
        </Grid.BackgroundTransition>
        <StackPanel>
            <TextBlock FontFamily="Segoe UI Variable Display" Style="{ThemeResource TitleLargeTextBlockStyle}" FontSize="32" TextWrapping="WrapWholeWords" Margin="10,10,10,0">Temperature<LineBreak/></TextBlock>
            <StackPanel Spacing="10" Margin="10,0,10,10">
                <TextBlock FontFamily="Segoe UI" FontSize="18">Enter the temperature to convert</TextBlock>
                <TextBox x:ConnectionId='4'                                                                                         x:FieldModifier="public" x:Name="input" FontFamily="Segoe UI" FontSize="16"/>
            </StackPanel>
            <Grid Margin="10,10,10,0">
                <StackPanel Spacing="10" Margin="0,0,10,10">
                    <ComboBox x:ConnectionId='3' x:FieldModifier="public" x:Name="convselect" Header="Select conversion" FontFamily="Segoe UI" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center"                                    />
                </StackPanel>
            </Grid>
            <StackPanel Spacing="10" Margin="10,10,10,10">
                <TextBlock FontFamily="Segoe UI" FontSize="18">Result</TextBlock>
                <TextBlock x:ConnectionId='2' x:FieldModifier="public" x:Name="output" FontFamily="Segoe UI" FontSize="16"></TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

